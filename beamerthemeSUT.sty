\DeclareOptionBeamer{MathSerif}{\PassOptionsToPackage{MathSerif}{beamerfontthemeSUT}}
\DeclareOptionBeamer{Serif}{\PassOptionsToPackage{Serif}{beamerfontthemeSUT}}


%% Automatic title frame:
\DeclareOptionBeamer{TitlePage}{\PassOptionsToPackage{TitlePage}{beamerinnerthemeSUT}}
\DeclareOptionBeamer{NoTitlePage}{\PassOptionsToPackage{NoTitlePage}{beamerinnerthemeSUT}}


\ExecuteOptionsBeamer{english}
\ExecuteOptionsBeamer{t}
\ExecuteOptionsBeamer{unnumbered}
\ExecuteOptionsBeamer{SansSerif}
